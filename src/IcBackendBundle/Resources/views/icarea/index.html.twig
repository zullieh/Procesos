{% extends 'base_backend.html.twig' %}


{% block content %}
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-8">
                        <div class="panel-heading">
                            <h3 class="panel-title">Filtrar Tabla</h3>
                            <div class="pull-right">
                            <span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                                <i class="fa fa-filter fa-2x"></i>
                            </span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filtrar Resultados" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('icarea_new') }}">  <button type="button "  class="btn btn-sm btn-success btn-block">Nuevo</button></a>
                    </div>
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Tel√©fono</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for icArea in icAreas %}
                        <tr>
                            <td><a href="{{ path('icarea_show', { 'idArea': icArea.idArea }) }}">{{ icArea.idArea }}</a></td>
                            <td>{{ icArea.nombre }}</td>
                            <td>{{ icArea.correo }}</td>
                            <td>{{ icArea.telefono }}</td>
                            <td align="center">
                                <a class="btn btn-default" href="{{ path('icarea_show', { 'idArea': icArea.idArea }) }}"><em class="fa fa-eye"></em></a>
                                <a class="btn btn-danger" href="{{ path('icarea_edit', { 'idArea': icArea.idArea }) }}"><em class="fa fa-pencil"></em></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

