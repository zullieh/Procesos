{% extends 'base_backend.html.twig' %}

{% block content %}
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-8">
                        <div class="panel-heading">
                            <h3 class="panel-title">Filtrar Tabla</h3>
                            <div class="pull-right">
                    <span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <i class="fa fa-filter fa-2x"></i>
                    </span>
                            </div>
                        </div>
                        <div class="panel-body">
                            <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filtrar Resultados" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('icusuario_new') }}">  <button type="button"  class="btn btn-sm btn-success btn-block">Nuevo</button></a>
                    </div>
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list">
                    <thead>
                    <tr>
                        <th>Id usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Contrase√±a</th>
                        <th>Fecha inicio</th>
                        <th>Fecha modificaci&oacute;n</th>
                        <th>Telefono</th>
                        <th>id Centro</th>
                        <th>id_Direccion</th>
                        <th>id_Gerencia</th>
                        <th>id_Area</th>
                        <th>id_Puesto</th>
                        <th>id_Categoria</th>
                        <th>id_subcategoria</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for icUsuario in icUsuarios %}
                        <tr>
                            <td><a href="{{ path('icusuario_show', { 'idUsuario': icUsuario.idUsuario }) }}">{{ icUsuario.idUsuario }}</a>

                            </td>
                            <td>{{ icUsuario.nombre }}</td>
                            <td>{{ icUsuario.apellido }}</td>
                            <td>{{ icUsuario.correo }}</td>
                            <td>{{ icUsuario.contrasena }}</td>
                            <td>{% if icUsuario.fechaInicio %}{{ icUsuario.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if icUsuario.fechaModificacion %}{{ icUsuario.fechaModificacion|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ icUsuario.telefono }}</td>
                            <td>{{ icUsuario.idcentro }}</td>
                            <td>{{ icUsuario.iddireccion }}</td>
                            <td>{{ icUsuario.idgerencia }}</td>
                            <td>{{ icUsuario.idarea }}</td>
                            <td>{{ icUsuario.idpuesto }}</td>
                            <td>{{ icUsuario.idcategoria }}</td>
                            <td>{{ icUsuario.idsubcategoria }}</td>
                            <td align="center">
                                <a class="btn btn-default" href="{{ path('icusuario_show', { 'idUsuario': icUsuario.idUsuario }) }}"><em class="fa fa-eye"></em></a>
                                <a class="btn btn-danger" href="{{ path('icusuario_edit', { 'idUsuario': icUsuario.idUsuario }) }}"><em class="fa fa-pencil"></em></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
